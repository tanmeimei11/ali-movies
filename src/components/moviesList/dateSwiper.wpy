<template>
  <view class="swiper-wrap">
    <view class="date-slide"  wx:for="{{dateList}}" wx:for-index="index" wx:for-item="item" wx:key="index">
      <view class="slide-item {{active === index ? 'active' : '' }}"  @tap="changeActive(index)">
        <text class="date-txt">{{item}}</text>
        <view class="bottom-border"></view>
      </view>
    </view>
  </view> 
</template>
<script>
  import wepy from 'wepy';
  export default class dateSwiper extends wepy.component{
    props = {
      dateList: [],
      active: Number
    }
    data = {
      swiperOption: {
        freeMode: true,
        slidesPerView: 'auto',
        initialSlide: this.active
      },
      activeIndex: this.active
    }
    methods =  {
      changeActive (index) {
        this.$track('cinema_page_date')
        this.$emit('dateChange', index)
      }
    }
    watch =  {
      active (newVal) {
        this.activeIndex = newVal
      }
    }
  }
</script>
